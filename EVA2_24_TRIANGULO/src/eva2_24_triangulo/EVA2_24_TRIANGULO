package eva2_24_triangulo;

import java.util.Scanner;

public class EVA2_24_TRIANGULO {

    public static void main(String[] args) {
        Scanner captu = new Scanner(System.in);
        int num;
        System.out.println("Introduce un numero: ");
        num = captu.nextInt();
        for( int i = 1; i <=num; i++){
            for(int j= 1; j<= i; j++)
                System.out.print("*");
        
        System.out.println("");
        }
    }
}
    
